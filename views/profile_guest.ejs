<head>
    <link rel="stylesheet" href="css/profile.css" />
    <title>Profile</title>
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <h2 class="mb-5">User's Bio</h2>
  
        <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img
                      src="/img/profilePicture.png"
                      alt="Admin"
                      class="rounded-circle"
                      width="150"
                    />
                    <div class="mt-3">
                      <h4><%= user.username %></h4>
                      <p class="text-muted font-size-sm"><%= user.country %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
  
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.username %>
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary"><%= user.email %></div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Organization</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.organization %>
                    </div>
                  </div>
                  <hr />
  
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Country</h6>
                    </div>
                    <div class="col-sm-9 text-secondary"><%= user.country %></div>
                  </div>
                  <hr />
                  <%if(is_friend === false){%>
                  <div class="row">
                    <form action="/requests/add/<%=user._id%>" method="post">
                        <button type="submit" style="width:150px; margin-left: 1.65%;">Friend Request</button>
                    </form>
                  </div>
                  <%}%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  