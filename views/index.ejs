<head>
  <link rel="stylesheet" href="css/index.css" />
  <title>Touch Typing</title>
</head>

<body>
  <div class="container-xl">
    <div class="mode-container">
      <div class="mode-time">
        Time:
        <form method="post" action="/">
          <button class="time-element">60</button>
        </form>
        <button class="time-element">30</button>
      </div>
      <div class="mode-spacer"></div>
      <div class="mode-text">
        Text:
        <button class="text-element">100</button>
        <button class="text-element">50</button>
      </div>
    </div>
    <div class="timer" id="timer"></div>
    <div class="wrapper">
      <div class="content">
        <ul class="result-details">
          <li class="time">
            <p>Time Left:</p>
            <span><b name="time">60</b>s</span>
          </li>
          <li class="mistake">
            <p>Mistakes:</p>
            <span name="mistake">0</span>
          </li>
          <li class="word">
            <p>Words:</p>
            <span>0</span>
          </li>
          <li class="wpm">
            <p>WPM:</p>
            <span name="wpm">0</span>
          </li>
          <li class="cpm">
            <p>CPM:</p>
            <span name="cpm">0</span>
          </li>
        </ul>
      </div>
      <input type="text" class="input-field" />
      <div class="content-box">
        <div class="typing-text">
          <p></p>
        </div>
      </div>
    </div>
  </div>

  <script src="js/paragraphs.js"></script>
  <script src="js/script.js"></script>
</body>
