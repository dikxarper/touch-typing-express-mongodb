<head>
  <link rel="stylesheet" href="/css/profile.css" />
  <link rel="stylesheet" href="/css/index.css" />
  <title>Profile Edit</title>
</head>
<body>
  <style>
    body {
      background-color: #323437;
    }
    label {
      color: #d1d0c5;
    }
    .card-body {
      background-color: #323437;
      color: #d1d0c5;
    }
    .text-secondary {
      color: #d1d0c5;
    }
  </style>
  <h2 class="mb-3">Profile Edit</h2>

  <form action="/profile/<%= user._id %>/edit" method="post">
    <div class="form-group">
      <label class="title">Username</label>
      <input
        required
        value="<%= user.username %> "
        name="username"
        id="username"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label class="title">Email</label>
      <input
        required
        value="<%= user.email %> "
        name="email"
        id="email"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label class="title">Country</label>
      <input
        required
        value="<%= user.country %> "
        name="country"
        id="country"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label class="title">Organization</label>
      <input
        required
        value="<%= user.organization %> "
        name="organization"
        id="organization"
        class="form-control"
      />
    </div>
    <div class="mt-5">
      <button type="submit" class="btn btn-primary d-inline">Save</button>

      <button class="btn btn-secondary">Cancel</button>
    </div>
  </form>
</body>
